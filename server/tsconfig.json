{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "src",
      "noImplicitAny": true,
      "sourceMap": true,
      "strict": true,
      "module": "CommonJS",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }